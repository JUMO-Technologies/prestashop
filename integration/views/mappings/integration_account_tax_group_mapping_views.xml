<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="integration_account_tax_group_mapping_view_tree" model="ir.ui.view">
            <field name="name">integration.account.tax.group.mapping.view.tree</field>
            <field name="model">integration.account.tax.group.mapping</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="integration_id"/>
                    <field name="tax_group_id"/>
                    <field name="external_tax_group_id"/>
                </tree>
            </field>
        </record>

        <record id="integration_account_tax_group_mapping_action" model="ir.actions.act_window">
            <field name="name">Tax Groups</field>
            <field name="res_model">integration.account.tax.group.mapping</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
